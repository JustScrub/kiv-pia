{% extends "Outline.view.twig" %}

{% block BODY %}

    {% if bad_file_type %}
        <p>{{ lang == "cz"? "Soubor musí být ve formátu PDF!" : "File must be in the PDF format!" }}</p>
    {% endif %}
    <form class="form-horizontal" enctype="multipart/form-data" method="post">

        <div class="form-group">
            <label class="control-label col-sm-2" for="nazev">{{ lang == "cz"? "Název:" : "Name:" }}</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="nazev" placeholder="{{ lang == "cz"? "Název článku" : "Article name" }}" name="nazev" required>
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-sm-2" for="klicova_slova">{{ lang == "cz"? "Klíčová slova:" : "Keywords:" }}</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="klicova_slova" placeholder="{{ lang == "cz"? "až 200 znaků" : "up to 200 characters" }}" name="klicova_slova">
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-sm-2" for="popis">{{ lang == "cz"? "Popis článku:" : "Article description:" }}</label>
            <div class="col-sm-10">
                <textarea class="form-control" id="popis" name="popis" placeholder="{{ lang == "cz"? "Až 2000 znaků. Může být změněno později." : "Up to 2000 characters. Can be changed later." }}"></textarea>
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-sm-2" for="fl">{{ lang == "cz"? "Článek v PDF:" : "Article in PDF:" }}</label>
            <div class="col-sm-10">
                <input type="file" class="form-control-file" id="fl" name="fl" required>
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-primary" name="submit">{{ lang == "cz"? "Odeslat" : "Submit" }}</button>
            </div>
        </div>
    </form>

{% endblock %}

{% block JS_Script %}
{% if form_success %}
    <script>
        alert("{{ lang == "cz"? "Článek úspěšně odeslán!" : "Article successfully submitted!" }}")
    </script>
{% endif %}
{% endblock %}